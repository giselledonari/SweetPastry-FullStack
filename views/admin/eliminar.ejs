<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../assets/styles/style.css" />
  </head>

  <body>
    <%- include('../nav') %>
    <div class="row">
        <div class="col-2">
            <%- include('sidenav') %>
        </div>
        <div class="col-8">
            <div class=" m-5" style="width: 800px">
                <h2 >Eliminar Producto</h2>
                <form id="formEliminar" class="row g-3 mt-3 col-10">
                    <div class="col-md-4">
                      <label for="idProducto" class="form-label">Id</label>
                      <input type="number" class="form-control" id="idProducto" name="idProducto" required placeholder="Id del producto">
                    </div>
                    
                    <div class="col-12">
                      <button type="submit" class="btn btn-danger">Eliminar</button>
                    </div>
                  </form>
                  
                  <% if (mensaje) { %>
                    <h4 class="mt-3"><%= mensaje %></h4>
                  <% } %>
                  
            </div>
        </div>
    </div>
    

    
    


    <%- include('../footer') %>

    <script src="../assets/javascript/admin.js">
        
    </script>
  </body>
</html>
